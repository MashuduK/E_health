@model IEnumerable<E_health.Models.FamilyPlanning.FamilyPlanningGoal>


<h1>Family Planning Goals</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Desired Number of Children</th>
            <th>Desired Spacing Between Children</th>
            <th>Desired Age At First Pregnancy</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DesiredNumberOfChildren</td>
                <td>@item.DesiredSpacingBetweenChildren</td>
                <td>@item.DesiredAgeAtFirstPregnancy</td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.Id })">Details</a> |
                    <a href="@Url.Action("Edit", new { id = item.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Goal</a>
