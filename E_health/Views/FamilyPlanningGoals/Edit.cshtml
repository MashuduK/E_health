<h1>Edit Family Planning Goal</h1>

<form action="@Url.Action("Edit", new { id = Model.Id })" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="form-group">
        <label for="desiredNumberOfChildren">Desired Number of Children:</label>
        <input type="number" name="desiredNumberOfChildren" id="desiredNumberOfChildren" class="form-control" value="@Model.DesiredNumberOfChildren" />
    </div>

    <div class="form-group">
        <label for="desiredSpacingBetweenChildren">Desired Spacing Between Children:</label>
        <input type="number" name="desiredSpacingBetweenChildren" id="desiredSpacingBetweenChildren" class="form-control" value="@Model.DesiredSpacingBetweenChildren" />
    </div>

    <div class="form-group">
        <label for="desiredAgeAtFirstPregnancy">Desired Age At First Pregnancy:</label>
        <input type="number" name="desiredAgeAtFirstPregnancy" id="desiredAgeAtFirstPregnancy" class="form-control" value="@Model.DesiredAgeAtFirstPregnancy" />
    </div>

    <button type="submit" class="btn btn-primary">Update Goal</button>
</form>
